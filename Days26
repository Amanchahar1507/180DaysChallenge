    // 3: Bubble Sort Algorithm to sort the array of char in ascending order.


    int n;
    cout<<"enter the numbers"<<" ";
    cin>>n;

    char arr[1000];
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }

    for(int j=n-1;j>=0;j--){
        bool swaped=0;
    for(int i=0;i<=j;i++){
        if(arr[i]>arr[i+1]){
            swaped =1;
            char temp = arr[i];
            arr[i] = arr[i+1];
            arr[i+1] = temp;
        }
    }
    if(swaped==0) break;

    }

    for(int i=0;i<n;i++){
        cout<<arr[i]<<" ";
    }


}
